<%if @url.errors.any? %>
	<ul>
		<% @url.errors.full_messages.each do |errors_msg| %>
		<li><%= errors_msg %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for [@url] do |f|%>
	<%= f.label :url%>
	<%= f.text_field :url%>
	<br>
	<%= f.submit 'save'%>
	<br>
	<%= f.label :short_url%>
	<%= f.text_field :short_url%>
	<br>
	<%= link_to("Convert", urls_path(:short_url))%>
<%end%>
<%= link_to("Back", urls_path)%>